{
    "$schema": "vscode://schemas/settings/default",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.fontSize": 14,
    "gitlens.defaultDateShortFormat": null,
    "gitlens.defaultDateFormat": null,
    "python.defaultInterpreterPath": "C:\\Program Files\\Python313\\python.exe",
    "[c]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true
    },
    "workbench.startupEditor": "none",
    "cmake.configureOnOpen": true,
    "git.autofetch": true,
    "workbench.editorAssociations": {
        "*.docx": "default"
    },
    "workbench.editor.empty.hint": "hidden",
    "cmake.options.statusBarVisibility": "visible",
    "[dart]": {
        "editor.rulers": [80],
        "editor.selectionHighlight": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "window.confirmSaveUntitledWorkspace": false,
    "gitlens.rebaseEditor.ordering": "asc",
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "workbench.iconTheme": "material-icon-theme",
    "window.restoreWindows": "none",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "files.autoSave": "afterDelay",
    "explorer.confirmDelete": false,
    "window.titleBarStyle": "custom",
    "explorer.expandSingleFolderWorkspaces": false,
    "terminal.integrated.cursorBlinking": true,
    "editor.fontFamily": "Jetbrains Mono, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.smoothScrolling": true,
    "editor.mouseWheelZoom": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.cursorSurroundingLines": 8,
    "github.copilot.nextEditSuggestions.enabled": false,
    "github.copilot.enable": {
        "*": false
    },
    "better-comments.tags": [
        {
            "tag": "TODO:",
            "color": "#EA580C",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "FIXME:",
            "color": "#FF2D00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "BUG:",
            "color": "#9333EA",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "HACK:",
            "color": "#C026D3",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "NOTE:",
            "color": "#2563EB",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "INFO:",
            "color": "#0EA5E9",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "IDEA:",
            "color": "#FFF",
            "strikethrough": false,
            "backgroundColor": "#EAB308"
        }
    ],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "prettier.tabWidth": 4,
    "prettier.semi": true,
    "prettier.singleQuote": false,
    "prettier.useTabs": false,
    "remote.defaultExtensionsIfInstalledLocally": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github"
    ],
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "files.associations": {
        "*.json": "json"
    },
    "git.confirmSync": false,
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "git.enableSmartCommit": true,
    "gitlens.ai.model": "gitkraken",
    "gitlens.ai.vscode.model": "copilot:gpt-4o",
    "gitlens.ai.largePromptWarningThreshold": 50000,
    "editor.minimap.size": "fill",
    "editor.minimap.showSlider": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "chat.instructionsFilesLocations": {
        ".github/instructions": true,
        "/tmp/postman-http-request-post-response.instructions.md": true,
        "/tmp/postman-http-request-pre-request.instructions.md": true,
        "/tmp/postman-collections-post-response.instructions.md": true,
        "/tmp/postman-collections-pre-request.instructions.md": true,
        "/tmp/postman-folder-post-response.instructions.md": true,
        "/tmp/postman-folder-pre-request.instructions.md": true
    },
    "go.toolsManagement.autoUpdate": true,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "postman.mcp.notifications.postmanMCP": false,
    "typescript.tsserver.maxTsServerMemory": 2048,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.compositeKeys": {},
    "workbench.colorTheme": "GitHub Dark Default",
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "git.openRepositoryInParentFolders": "never",
    "workbench.commandPalette.showAskInChat": false,
    "chat.implicitContext.enabled": {
        "panel": "never"
    },
    "chat.disableAIFeatures": true,
    "gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,

    // Show relative line numbers
    "editor.lineNumbers": "relative",

    // Smooth cursor
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",

    // ============================================================================
    // Normal Mode Keybindings
    // ============================================================================

    "vim.normalModeKeyBindingsNonRecursive": [
        // Clear search highlights
        {
            "before": ["<Esc>"],
            "commands": [":nohl"]
        },

        // File Explorer - <leader>pv
        {
            "before": ["<leader>", "p", "v"],
            "commands": ["workbench.view.explorer"]
        },

        // Window navigation - Ctrl+hjkl
        {
            "before": ["<C-h>"],
            "commands": ["workbench.action.focusLeftGroup"]
        },
        {
            "before": ["<C-l>"],
            "commands": ["workbench.action.focusRightGroup"]
        },
        {
            "before": ["<C-j>"],
            "commands": ["workbench.action.focusBelowGroup"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["workbench.action.focusAboveGroup"]
        },

        // File operations
        {
            "before": ["<leader>", "f", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "f", "g"],
            "commands": ["workbench.action.findInFiles"]
        },
        {
            "before": ["<leader>", "f", "b"],
            "commands": ["workbench.action.showAllEditors"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": ["workbench.action.showAllEditors"]
        },

        // Code navigation
        {
            "before": ["g", "d"],
            "commands": ["editor.action.revealDefinition"]
        },
        {
            "before": ["g", "r"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["g", "i"],
            "commands": ["editor.action.goToImplementation"]
        },
        {
            "before": ["g", "t"],
            "commands": ["editor.action.goToTypeDefinition"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.showHover"]
        },

        // LSP/Code actions
        {
            "before": ["<leader>", "r", "n"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["<leader>", "c", "a"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.formatDocument"]
        },

        // Splits
        {
            "before": ["<leader>", "v"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before": ["<leader>", "h"],
            "commands": ["workbench.action.splitEditorDown"]
        },

        // Diagnostics
        {
            "before": ["<leader>", "q"],
            "commands": ["workbench.actions.view.problems"]
        },
        {
            "before": ["[", "d"],
            "commands": ["editor.action.marker.prevInFiles"]
        },
        {
            "before": ["]", "d"],
            "commands": ["editor.action.marker.nextInFiles"]
        },

        // Terminal
        {
            "before": ["<leader>", "t", "t"],
            "commands": ["workbench.action.terminal.toggleTerminal"]
        },

        // Buffer/Tab management
        {
            "before": ["<leader>", "b", "d"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<Tab>"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<S-Tab>"],
            "commands": ["workbench.action.previousEditor"]
        },

        // Telescope-like search
        {
            "before": ["<leader>", "s", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "s", "g"],
            "commands": ["workbench.action.findInFiles"]
        },
        {
            "before": ["<leader>", "s", "h"],
            "commands": ["workbench.action.showAllSymbols"]
        }
    ],

    // ============================================================================
    // Visual Mode Keybindings
    // ============================================================================

    "vim.visualModeKeyBindingsNonRecursive": [
        // Comment toggle in visual mode
        {
            "before": ["g", "c"],
            "commands": ["editor.action.commentLine"]
        },

        // Code action in visual mode
        {
            "before": ["<leader>", "c", "a"],
            "commands": ["editor.action.quickFix"]
        },

        // Stay in visual mode when indenting
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        }
    ],

    //============================================================================
    // Insert Mode Keybindings
    // ============================================================================

    "vim.insertModeKeyBindings": [
        // Exit insert mode with jk
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],

    // ============================================================================
    // Handled Keys (Let Vim handle these)
    // ============================================================================

    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": true,
        "<C-c>": false,
        "<C-v>": false,
        "<C-x>": false,
        "<C-z>": false,
        "<C-y>": false,
        "<C-n>": true,
        "<C-p>": true,
        "<C-h>": true,
        "<C-j>": true,
        "<C-k>": true,
        "<C-l>": true,
        "<C-w>": true,
        "<C-d>": true,
        "<C-u>": true
    },

    // ============================================================================
    // Additional Vim Settings
    // ============================================================================

    "vim.easymotion": true,
    "vim.surround": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 200,

    // Scroll settings
    "vim.scroll": 10,

    // Status bar color based on mode
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#005f5f", "#ffffff"],
    "vim.statusBarColors.insert": ["#5f0000", "#ffffff"],
    "vim.statusBarColors.visual": ["#5f00af", "#ffffff"],
    "vim.statusBarColors.visualline": ["#5f00af", "#ffffff"],
    "vim.statusBarColors.visualblock": ["#5f00af", "#ffffff"],
    "vim.statusBarColors.replace": ["#5f5f00", "#ffffff"],

    // ============================================================================
    // Editor Settings for Better Vim Experience
    // ============================================================================

    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "off",
    "workbench.list.automaticKeyboardNavigation": false,
    "editor.suggest.insertMode": "replace",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f",
        "statusBar.foreground": "#ffffff",
        "statusBar.debuggingForeground": "#ffffff"
    }
}
